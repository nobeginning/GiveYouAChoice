<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ib_indicator"
            android:layout_centerVertical="true"
            android:background="@color/clear"
            android:src="@drawable/ic_menu_more_right"/>

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_group_name"
            android:paddingLeft="10dp"
            android:textSize="14sp"
            android:layout_toLeftOf="@+id/btn_del"
            android:layout_toRightOf="@id/ib_indicator"
            android:layout_alignTop="@+id/btn_del"
            android:layout_alignBottom="@+id/btn_del"
            android:gravity="center_vertical"/>

    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="编辑"
            android:textSize="14sp"
            android:id="@+id/btn_edit"
            android:layout_alignParentRight="true"
            android:background="#ff73a7ff"/>

    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="删除"
            android:textSize="14sp"
            android:layout_toLeftOf="@id/btn_edit"
            android:id="@+id/btn_del"
            android:background="#ffffc8ea"
            />
</RelativeLayout>